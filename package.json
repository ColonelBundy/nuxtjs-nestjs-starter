{
  "name": "nuxtjs-nestjs-starter",
  "version": "1.0.0",
  "description": "Starter project for nuxtjs and nestjs integrated.",
  "author": "ColonelBundy",
  "private": true,
  "scripts": {
    "nuxt:build": "nuxt build",
    "nuxt:generate": "nuxt generate",
    "format": "prettier --write \"**/*.ts\"",
    "start": "cross-env NODE_ENV=production ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "cross-env NODE_ENV=development nodemon",
    "start:debug": "cross-env NODE_ENV=development nodemon --config nodemon-debug.json",
    "prestart:prod": "rimraf dist && npm run build",
    "start:prod": "node dist/main.js",
    "lint": "tslint -p tsconfig.json -c tslint.json"
  },
  "dependencies": {
    "@nestjs/common": "^5.4.0",
    "@nestjs/core": "^5.4.0",
    "@nestjs/microservices": "^5.4.0",
    "@nestjs/websockets": "^5.4.0",
    "reflect-metadata": "^0.1.12",
    "rimraf": "^2.6.3",
    "rxjs": "^6.3.3",
    "cross-env": "^5.2.0",
    "nuxt": "^2.4.0",
    "express": "^4.16.4",
    "vuetify": "^1.5.5",
    "vuetify-loader": "^1.2.1",
    "@nuxtjs/axios": "^5.3.6"
  },
  "devDependencies": {
    "@types/express": "^4.16.0",
    "@types/node": "^10.12.18",
    "jest": "^23.6.0",
    "prettier": "^1.15.3",
    "supertest": "^3.4.1",
    "ts-node": "^7.0.1",
    "tsconfig-paths": "^3.7.0",
    "tslint": "5.12.1",
    "typescript": "^3.2.4",
    "nodemon": "^1.18.9",
    "eslint-config-prettier": "^3.1.0",
    "eslint-plugin-prettier": "2.6.2",
    "stylus": "^0.54.5",
    "stylus-loader": "^3.0.2"
  }
}
